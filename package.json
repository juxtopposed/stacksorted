{
	"name": "stacksorted",
	"version": "0.0.1",
	"type": "module",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"serve": "vite build && vite preview",
		"tsc": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"tsc:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"fmt:check": "prettier --plugin-search-dir . --check .",
		"fmt:write": "prettier --plugin-search-dir . --write .",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"prepare": "husky install"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.6.7",
		"@commitlint/config-conventional": "^17.6.7",
		"@sveltejs/adapter-auto": "^2.1.0",
		"@sveltejs/kit": "^1.22.3",
		"@typescript-eslint/eslint-plugin": "^5.62.0",
		"@typescript-eslint/parser": "^5.62.0",
		"autoprefixer": "^10.4.14",
		"eslint": "^8.45.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-svelte": "^2.32.4",
		"eslint-plugin-tailwindcss": "^3.13.0",
		"husky": "^8.0.0",
		"lint-staged": "^13.2.3",
		"postcss": "^8.4.27",
		"prettier": "^2.8.8",
		"prettier-plugin-svelte": "^2.10.1",
		"prettier-plugin-tailwindcss": "^0.4.1",
		"svelte": "^4.1.1",
		"svelte-check": "^3.4.6",
		"tailwindcss": "^3.3.3",
		"tslib": "^2.6.0",
		"typescript": "^5.1.6",
		"vite": "^4.4.6"
	},
	"dependencies": {
		"clsx": "^2.0.0",
		"tailwind-merge": "^1.14.0"
	}
}
